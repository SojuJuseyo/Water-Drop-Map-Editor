<Window x:Class="MapEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapEditor"
        mc:Ignorable="d"
        Title="Water Drop Project Map Editor" Height="620" Width="1024">
    <Grid Width="1021">
        <Menu DockPanel.Dock="Top" Margin="0" Height="22" VerticalAlignment="Top" BorderThickness="0,0,0,1" BorderBrush="#FF9C9898">
            <MenuItem Header="_File" Margin="0" Padding="7,2,8,6">
                <MenuItem Header="_New" Click="MenuFileNew_Click"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="testTextBox" TextWrapping="Wrap" Margin="10,27,633,300"/>
        <StackPanel MouseLeftButtonDown="setTileTexture" x:Name="mapGrid" HorizontalAlignment="Right" Margin="0,27,14,0" VerticalAlignment="Top" Width="550" Height="550"/>
        <Button x:Name="redButton" Content="Red" HorizontalAlignment="Left" Margin="151,297,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="redButton_Click"/>
        <Button x:Name="greenButton" Content="Green" HorizontalAlignment="Left" Margin="85,297,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="greenButton_Click"/>
        <Button x:Name="blueButton" Content="Blue" HorizontalAlignment="Left" Margin="30,297,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="blueButton_Click"/>
    </Grid>
</Window>
    
